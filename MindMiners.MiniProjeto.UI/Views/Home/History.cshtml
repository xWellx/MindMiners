@model List<(DateTime date, byte[] file)>




<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0, index = 1; i < Model.Count; i++, index++)
        {
            var item = Model[i];

            <tr>
                <th scope="row">@index</th>
                <td>@item.date.ToString()</td>
                <td><a asp-action="history" asp-route-index="@i">Download</a></td>
            </tr>

        }
    </tbody>
</table>

@{ 
    await Html.RenderPartialAsync("partial/errormessage");
}




@if (ViewBag.Error != null)
{
    <div id="errorMessage" class="form-group" style="color:red">
        @ViewBag.Error
    </div>
    <script>
        setTimeout(() => {
            debugger;
            document.getElementById("errorMessage").style = "display:none";
        }, 5000);
    </script>
}